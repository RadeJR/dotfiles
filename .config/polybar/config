[module/mem]
type = custom/script
exec = free -h | awk '/^Mem:/ {print $3}' | sed "s/Gi/G/g;s/Mi/M/"
format = <label>
format-prefix = "  "
label = "%output%"
label-foreground = ${colors.orange}
format-prefix-foreground = ${colors.orange}
format-padding = 1

[module/cpu]
