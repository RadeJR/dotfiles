[module/time]
type = internal/date
interval = 60
format = <label>
format-background = ${colors.content-background}
date = %a, %b %d %H:%M%{F-}
time-alt = %a, %b %d%{F-}
label = %date%%time%
format-padding = 1

[module/mem]
type = custom/script
exec = free -h | awk '/^Mem:/ {print $3}' | sed "s/Gi//g;s/$/G/"
format = <label>
format-prefix = "î‰¦ "
label = "%output%"
format-prefix-foreground = ${colors.orange}
format-padding = 1

